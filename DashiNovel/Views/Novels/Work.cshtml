@{
    ViewData["Title"] = "Works";
}
<style>
    a {
        text-decoration: none;
    }
</style>

@if(ViewBag.novels != null)
{
    <div class="d-flex justify-content-between">
        <h1>Your Works</h1>
        <div>
            <a asp-controller="Novels" asp-action="Publish"><i class="fa-solid fa-plus"></i> Create A New Novel</a>
        </div>
    </div>
    <div class="row">
        @foreach(Novel n in ViewBag.novels)
        {
            <div class="col-sm-6 col-md-3 col-lg-2">
                <a asp-asp-controller="Novels" asp-action="EditNovel" asp-route-novelId="@n.NovelId">
                    <img class="img-fluid" src="data:image/png;base64,@Convert.ToBase64String(n.Image)" alt="Image" />
                    @n.Title
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="d-flex justify-content-between">
        <h1>Your Works</h1>
        <div>
            <a asp-controller="Novels" asp-action="Publish"><i class="fa-solid fa-plus"></i> Create A New Novel</a>
        </div>
    </div>
}

