@{
    ViewData["Title"] = "Home Page";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers;
@using DashiNovel.Models;
<style>
    a{
        text-decoration: none;
    }
</style>

<h4>Popular This Week</h4>
<div class="row">
    @foreach (Novel n in Model)
    {
        <div class="col-sm-6 col-md-3 col-lg-2">
            <a asp-controller="Novels" asp-action="Details" asp-route-novelId="@n.NovelId">
                <img class="img-fluid" src="data:image/png;base64,@Convert.ToBase64String(n.Image)" alt="Image" />
                <b>@n.Title</b>
            </a>
        </div>
    }
</div>
<h4>New Releases</h4>
<div class="row">
    @foreach (Novel n in Model)
    {
        <div class="col-sm-6 col-md-3 col-lg-2">
